<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= title %> </title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/ecd6db5343.js" crossorigin="anonymous"></script>
</head>
<body>
    <h1 id="Contactlist">Contact List</h1>
    <%for(let i of contact_list){%>
    <ul>
        <li>
            
            <p id="namesandphone">
                <%=i.name%>
                <%=i.number%>
                <span>
                    <!-- for params -->

                    <!-- <a href="/delete-contact/<%=i.number%>">  
                        <i class="fa-regular fa-circle-xmark"></i>
                    </a> -->

                    <!--for query  -->
                     <!-- <a href="/delete-contact/?number=<%= i.number %>& name=<%= i.name %>" id ="delete-button">  
                        <i class="fa-regular fa-circle-xmark"></i>
                    </a> -->


                    <!-- //deleting by id in mongoose -->
                     <!--for query  -->
                     <a href="/delete-contact/?id=<%= i._id %>" id ="delete-button">  
                        <i class="fa-regular fa-circle-xmark"></i>
                    </a>
                </span>  
            </p>
            
        </li>
    </ul>  
   
    <%}%> 

    <form action="/create-contact" method="post">
      <input type="text" required placeholder="enter name" name="name">
      <input type="number" required placeholder="enter phone" name="number">
      <button type="submit">Add phone Number</button>
    </form>
    <script src="/js/home.js"></script>
</body>
</html>